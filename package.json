{
  "name": "pura",
  "version": "4.0.1",
  "scripts": {
    "deploy": "./tasks/deploy.sh",
    "start": "./tasks/watch.sh",
    "build": "./tasks/build.sh",
    "dev": "npm start"
  },
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.5.1",
    "browser-sync": "^2.18.12",
    "clean-css-cli": "^4.1.4",
    "globby": "^6.1.0",
    "imagemin": "5.1.2",
    "imagemin-jpegtran": "^5.0.2",
    "imagemin-pngquant": "^5.0.1",
    "imagemin-svgo": "^5.2.2",
    "node-version-assets": "^1.2.0",
    "postcss-cli": "^4.1.0",
    "postcss-color-function": "^4.0.0",
    "postcss-easy-import": "^2.0.0",
    "postcss-hexrgba": "^0.2.1",
    "postcss-mixins": "^6.0.0",
    "postcss-nested": "^2.0.2",
    "postcss-simple-vars": "^4.0.0",
    "stylelint": "^7.11.0",
    "stylelint-trendyminds-standard": "^1.1.0",
    "webpack": "^2.6.1",
    "xo": "^0.18.2"
  },
  "dependencies": {
    "normalize.css": "^7.0.0",
    "picturefill": "^3.0.2"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "babel": {
    "presets": [
      "env"
    ]
  },
  "xo": {
    "space": true,
    "envs": [
      "browser"
    ],
    "rules": {
      "new-cap": [
        "error",
        {
          "properties": false
        }
      ],
      "no-new": 0,
      "unicorn/filename-case": 0,
      "unicorn/explicit-length-check": 0,
      "import/no-unassigned-import": 0,
      "no-alert": 0
    }
  },
  "stylelint": {
    "extends": "stylelint-trendyminds-standard"
  }
}
